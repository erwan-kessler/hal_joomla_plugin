<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
  <name>HAL Pub</name>
  <author>Erwan Kessler</author>
  <creationDate>July 2020</creationDate>
  <license>MIT</license>
  <authorUrl>erwankessler.com</authorUrl>
  <version>1.0</version>
  <description>Hal module for Joomla</description>

  <updateservers> 
    <server type="extension" priority="1" name="HAL Pub">http://www.erwankessler.com/updates/mod_hal_pub.xml</server>
  </updateservers>

  <languages>
    <language tag="en-GB">language/en-GB.mod_hal_pub.ini</language>
  </languages>
  <files>
    <filename module="mod_hal_pub">mod_hal_pub.php</filename>
    <folder>tmpl</folder>
    <folder>assets</folder>
    <folder>library</folder>
    <folder>language</folder>
    <filename>helper.php</filename>
    <filename>index.html</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="url" type="text" default="https://api.archives-ouvertes.fr/search" label="URL_ID" description="URL_ID_DESC" />
        <field name="division" type="text" default="LECOB" label="DIVISION_ID" description="DIVISION_ID_DESC" />
        <field name="query" type="text" default="*" label="QUERY_ID" description="QUERY_ID_DESC" />
        <field name="date" type="number" default="2019" label="DATE_ID" description="DATE_ID_DESC" />
        <field name="type" type="list" default="1" label="TYPE_ID" description="TYPE_ID_DESC">
          <option value="ART">Articles</option>
          <option value="COUV">Ouvrages</option>
          <option value="THESE">Theses</option>
          <option value="REPORT,COMM">Rapports et conf√©rences</option>
          <!--TODO add more-->
        </field>
        <field name="number_per_page" type="number" default="10" label="PG_NBR_ID" description="PG_NBR_ID_DESC" />
        <field name="layout_style" type="list" default="1" label="STYLE" description="STYLE_DESC">
          <option value="default">DEFAULT</option>
          <option value="list">LIST</option>
          <option value="bubble">BUBBLE</option>
        </field>
        <field name="target" type="radio" default="_blank" class="btn-group" label="WINDOW" description="WINDOW_DESC">
          <option value="_self">NEW_WINDOW</option>
          <option value="_blank">OWN_WINDOW</option>
        </field>

        <field type="spacer" name="tokens" hr="true" />

        <field name="consumer_key" type="text" default="" label="CONSUMER_KEY" description="CONSUMER_KEY_DESC" />
        <field name="consumer_key_secret" type="text" default="" label="CONSUMER_KEY_SECRET" description="CONSUMER_KEY_SECRET_DESC" />
        <field name="access_token" type="text" default="" label="ACCESS_TOKEN" description="ACCESS_TOKEN_DESC" />
        <field name="access_token_secret" type="text" default="" label="ACCESS_TOKEN_SECRET" description="ACCESS_TOKEN_SECRET_DESC" />


        <field type="spacer" name="myspacer2" hr="true" />
        <field name="animation" type="radio" default="none" class="btn-group" label="ANIMATION" description="ANIMATION_DESC">
          <option value="none">JNO</option>
          <option value="1">JYES</option>
        </field>		
        <field name="morph_duration" type="text" default="300" label="DURATION" description="DURATION_DESC" />
        <field name="animation_periodical_time" type="text" default="8000" label="INTERVAL" description="INTERVAL_DESC" />
      </fieldset>
	  
      <fieldset name="advanced">
		<field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
		<field name="cache" type="hidden" default="0" />
		<field name="module_cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
			<option value="1">JGLOBAL_USE_GLOBAL</option>
			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
		</field>
		<field name="cache_time" type="text" default="0" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
		<field name="cachemode" type="hidden" default="static">
			<option value="static"></option>
		</field>		
      </fieldset>
    </fields>
  </config>
</extension>